<div class="container">
  <h2>New Entry</h2>

  <% if @entry.errors.any?  %>
    <div class="alert alert-danger">
      <h4>There <%= @entry.errors.count > 1 ? "are " : "is " %><%= pluralize(@entry.errors.count, "error") %></h4>
      <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @entry do |f| %>
    <div class="form-group">
      <%#<%= f.label :date %>%>
      <%#<%= f.date_field_tag :date, class: 'form-control', placeholder: "mm/dd/yyyy" %>%>
    </div>

    <div class="form-group">
      <%= f.label :start %>
      <%= f.time_field :start, class: 'form-control', placeholder: "hh:mm" %>
    </div>

    <div class="form-group">
      <%= f.label :stop %>
      <%= f.time_field :stop, class: 'form-control', placeholder: "hh:mm" %>
    </div>

    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_area :notes, class: 'form-control', placeholder: "Description of the activity" %>
    </div>

    <%= f.submit "Save", class: 'btn btn-success' %>

  <% end %>

</div>

