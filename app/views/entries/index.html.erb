<h1>Time Entries</h1>

<table>
  <tr>
    <td>Day</td>
    <td>Start</td>
      <td>End</td>
    <td>Duration</td>
    <td>Note</td>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td>
      <%= entry.start.to_date %>
    </td>
    <td>
      <%= entry.start_time_formatted %>
    </td>
    <td>
      <%= entry.stop_time_formatted %>
    </td>
    <td>
      <%= entry.format_duration %>
    </td>
    <td>
      <%= entry.notes %>
    </td>
  </tr>
<% end %>

</table>


