<div class="container">
  <h2>New Entry</h2>

  <%= form_for @entry do |f| %>
    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date, class: 'form-control', placeholder: "mm/dd/yyyy" %>
    </div>

    <div class="form-group">
      <%= f.label :start %>
      <%= f.text_field :start, class: 'form-control', placeholder: "hh:mm" %>
    </div>

    <div class="form-group">
      <%= f.label :stop %>
      <%= f.text_field :stop, class: 'form-control', placeholder: "hh:mm" %>
    </div>

    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_area :notes, class: 'form-control', placeholder: "Description of the activity" %>
    </div>

    <%= f.submit "Save", class: 'btn btn-success' %>

  <% end %>

</div>

